<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mtrl_card_my_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_items"
        android:foreground="?android:attr/selectableItemBackground"
        android:visibility="gone"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="@dimen/default_corner_radius"
        tools:visibility="visible">

        <LinearLayout
            android:id="@+id/linear_my_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/default_margin_details">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_my_profile"
                style="@style/GitHubApp.TextView.Body.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_my_profile"
                android:textAlignment="textEnd"
                android:textColor="@color/textColor1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@android:drawable/ic_menu_info_details" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <include
        android:id="@+id/layout_base_list"
        layout="@layout/layout_base_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
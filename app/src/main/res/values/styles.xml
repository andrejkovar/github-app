<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GitHubApp.TextView" parent="Widget.AppCompat.TextView">
        <!-- Nothing for now -->
    </style>

    <style name="GitHubApp.TextView.Headline.1" parent="GitHubApp.TextView">
        <item name="android:textColor">@color/textColor1</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GitHubApp.TextView.Headline.2" parent="GitHubApp.TextView">
        <item name="android:textColor">@color/textColor1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="GitHubApp.TextView.Body.1" parent="GitHubApp.TextView">
        <item name="android:textColor">@color/textColor2</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="GitHubApp.TextView.Body.2" parent="GitHubApp.TextView">
        <item name="android:textColor">@color/textColor3</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="GitHubApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/default_corner_radius</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColor1</item>
    </style>

    <style name="GitHubApp.Button.Primary" parent="GitHubApp.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/textColor3</item>
    </style>

    <style name="GitHubApp.Button.Secondary" parent="GitHubApp.Button">
        <item name="backgroundTint">@color/secondaryBackground</item>
        <item name="android:textColor">@color/textColor1</item>
    </style>

    <style name="GitHubApp.Button.Accent" parent="GitHubApp.Button">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/textColor1</item>
    </style>

</resources>